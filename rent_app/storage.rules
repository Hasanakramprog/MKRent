rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(
//    /databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true
service firebase.storage {
  match /b/{bucket}/o {
    // Specific rules for product images - PUBLIC READ ACCESS
    match /products/{allPaths=**} {
      // Allow PUBLIC reads for all users (no authentication required)
      allow read: if true;
      
      // Allow writes only for authenticated users
      allow write: if request.auth != null
                   && request.auth.uid != null
                   && request.resource.size < 5 * 1024 * 1024 // Limit to 5MB
                   && request.resource.contentType.matches('image/.*'); // Only images
    }
    
    // Specific rules for marketplace images - PUBLIC READ ACCESS
    match /marketplace/{allPaths=**} {
      // Allow PUBLIC reads for all users (no authentication required)
      allow read: if true;
      
      // Allow writes only for authenticated users
      allow write: if request.auth != null
                   && request.auth.uid != null
                   && request.resource.size < 5 * 1024 * 1024 // Limit to 5MB
                   && request.resource.contentType.matches('image/.*'); // Only images
    }
    
    // General images uploads users (private/profile images)
    match /{allPaths=**} {
      // Allow reads for authenticated users only
      allow read: if request.auth != null;
      
      // Allow writes for authenticated users
      allow write: if request.auth != null
                   && request.auth.uid != null
                   && resource == null // Only allow creation, not updates
                   && request.resource.size < 5 * 1024 * 1024 // Limit to 5MB
                   && request.resource.contentType.matches('image/.*'); // Only images
    }
  }
}
